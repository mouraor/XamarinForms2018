<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TipoPaginaXF.TipoPagina.Navigation.Modal">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightSkyBlue">
            
            <!-- Esta modificação de layout para incluir uma "barra virtual" ou "toolbar" sem que seja utilizado qualquer
                 recurso visual da plataforma -->
            <StackLayout HeightRequest="50" BackgroundColor="LightBlue">
                <Label Text="Eu sou o título da barra virtual"/>
                <Button Text="X" Clicked="FecharModal"/>

            </StackLayout>
            
            <Label Text="Eu sou um MODAL"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>